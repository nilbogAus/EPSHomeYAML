light:
  # Onboard LED
  - platform: status_led
    name: "Onboard LED"
    id: "Onboard_LED"
    pin: 
      number: GPIO2
      inverted: true
    effects:
      - strobe:
          name: Slow Flash        
          colors:
            - state: True
              duration: 500ms
            - state: False
              duration: 500ms
      - strobe:
          name: Fast Flash
          colors:
            - state: True
              duration: 200ms
            - state: False
              duration: 200ms
  # external led
  - platform: binary
    name: "Red LED"
    id: RLED
    output: R_light_output
    on_turn_on:
      then:
        - light.turn_off: ALED
        - light.turn_off: GLED
  - platform: binary
    name: "Amber LED"
    id: ALED
