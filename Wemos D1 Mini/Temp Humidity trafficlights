binary_sensor:
  # motion Sensor
  - platform: gpio
    pin: D7
    name: "PIR Sensor"
    device_class: motion
    filters:
      - delayed_off: 5s #cover lockout time
    on_press:
      then:
        light.turn_on: Onboard_LED
    on_release:
      then:
        light.turn_off: Onboard_LED  

sensor:
  # Temp/Humid sensor
  - platform: dht
    model: AM2302
    pin: D5
    temperature:
      name: "Temperature"
      id: "Temperature"
      accuracy_decimals: 1
    humidity:
      name: "Humidity"
      id: "Humidity"
      accuracy_decimals: 1
    update_interval: 60s    

  # Wifi Signal
  - platform: wifi_signal # Reports the WiFi signal strength/RSSI in dB
    name: "WiFi Signal dB"
    id: wifi_signal_db
    update_interval: 300s
    entity_category: "diagnostic"
    internal: true
  - platform: copy # Reports the WiFi signal strength in %
    source_id: wifi_signal_db
    name: "WiFi Signal Percent"
    filters:
      - lambda: return min(max(2 * (x + 100.0), 0.0), 100.0);
    unit_of_measurement: "%"
    entity_category: "diagnostic" 

  # Net Power 
  - platform: homeassistant
    id: net_power
    entity_id: sensor.net_power
    name: net_power
    attribute: net_power    
    on_value_range: 
      - below: 0.0
        then:
          - light.turn_on: RLED
      - above: 0.0
        below: 500.0
        then:
          - light.turn_on: ALED
      - above: 500.0
        then:
          - light.turn_on: GLED      

  # Wifi IP address
